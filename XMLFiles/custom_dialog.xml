<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/image_dialog"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_news"

        android:layout_gravity="center"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
android:layout_below="@+id/image_dialog"
        android:text="Hello world!!!"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"

        />
    <View
        android:layout_width="300dp"
        android:layout_below="@+id/text"
        android:id="@+id/lineView"
        android:layout_height="2dp"
        android:background="#8418f0"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_below="@+id/lineView"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/twitterLogo"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/bluetwitter"/>
        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="#8418f0"

            />

        <ImageView
        android:id="@+id/bookmarkDialog"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/twitterLogo"
        android:src="@drawable/ic_bookmark_border"/>


    </LinearLayout>
</RelativeLayout>

